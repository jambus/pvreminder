<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".PVReminderActivity" 
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/pvrTitle"
        android:textColor="@color/darkblue"
        android:textSize="20sp" />

    <Button
        android:id="@+id/completePVBUtton"
        android:background="@drawable/button_style_green"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/clockImage"
        android:layout_toRightOf="@+id/clockImage"
        android:text="@string/completeButtonString"
        android:textSize="12sp" />

    <Button
        android:id="@+id/reminderLaterButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/disclaimer"
        android:layout_marginLeft="45dp"
        android:layout_toRightOf="@+id/completePVBUtton"
        android:background="@drawable/button_style_red"
        android:text="@string/reminderLaterString"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/clockImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignLeft="@+id/txtTitle"
        android:layout_below="@+id/txtTitle"
        android:layout_marginTop="18dp"
        android:contentDescription="@string/clockImage" />

    <TextView
        android:id="@+id/disclaimer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/completePVBUtton"
        android:layout_below="@+id/completePVBUtton"
        android:layout_marginTop="32dp"
        android:gravity="left"
        android:text="@string/disclaimer"
        android:textColor="@color/gray"
        android:textSize="12sp"
        android:textStyle="italic" />

</RelativeLayout>